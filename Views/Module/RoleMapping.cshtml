@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var checkBoxList = (List<SelectListItem>)ViewBag.RoleList;
}

@if (TempData["RoleCreate"] != null)
{

    <div class="alert alert-primary" id="NotificationDiv" runat="server" role="alert">
        <span class="fe fe-alert-circle fe-16 mr-2" id="Notif" style="background-color: #080a05;" ication" runat="server">
            @TempData["RoleCreate"]
        </span>
    </div>
}

<div class="col-md-12 my-4">

    <div class="card shadow">
        <div class="card-body">
            <div class="row">

                <div class="form-group col-md-4">
                    <label for="Transaction_ID">Search By User ID </label>
                    <input type="text" class="form-control" id="SearchAgentID">
                </div>

                <div class="form-group col-md-4">
                    <div class="card-body d-flex justify-content-center align-items-center">
                        <button class="btn btn-primary" id="btnSearch" type="submit">Search</button>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<form class="AdminCreateio" action="RoleInsert" method="post">


    <div class="col-md-12 my-4">

        <div class="card shadow">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="custom-select-1">Select Users</label> <span style="color:red">*</span>
                            @Html.DropDownList("User_ID", (List<SelectListItem>)ViewBag.UserList, "Select Users", new { @class = "custom-select", id = "ID", onchange = "GetProcessOnUser(this)", required = "required" })
                            <input type="hidden" id="UserName" name="UserName" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3 ">
                            <label for="custom-select-1">Select Role</label>
                            @foreach (var item in checkBoxList)
                            {
                                <div>

                                    <input type="checkbox"
                                           name="selectedProcesses"
                                           value="@item.Value"
                                           id="@item.Value"
                                           class="process-checkbox" />
                                    <label for="@item.Value">@item.Text</label>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2 my-4">
        <div class="card-body d-flex justify-content-center align-items-center">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
</form>

<script>
    function GetProcessOnUser(user) {
        var UserID = user.value;
        $.ajax({
            url: '@Url.Action("GetRoleByRole", "Admin")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ ID: UserID }),

            success: function (response) {
                console.log(JSON.stringify(response))
                $(".process-checkbox").prop("checked", false);


                response.forEach(function (item) {
                    // Log the value of the checkbox and response to compare
                    console.log("Comparing checkbox id: " + item.value + " with checkbox id: " + $("#" + item.value).attr('id'));

                    if (item.selected) {

                        console.log("Checked checkbox with id: " + item.value);
                    } else {
                        $("#" + item.value).prop("checked", true); // Check the checkbox
                    }
                });

            },
            error: function (xhr, status, error) {
                console.error("Error fetching admin users:", error);
            }
        });
    }
</script>
<script type="text/javascript">

    document.getElementById("ID").addEventListener("change", function () {
        var userName = this.options[this.selectedIndex].text;
        document.getElementById("UserName").value = userName;
    });
</script>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>


                $(document).ready(function () {
        $('#btnSearch').click(function (e) {
            e.preventDefault();

            var inputText = $('#SearchAgentID').val().trim().toLowerCase();
            var dropdown = $('#ID');
            var found = false;

            dropdown.find('option').each(function () {
                var optionText = $(this).text().trim().toLowerCase();

                if (optionText === inputText) {
                    var optionValue = $(this).val();

                    dropdown.val(optionValue);
                    dropdown.trigger('change');
                    found = true;
                    return false; // Exit loop
                }
            });

            if (!found) {

                Swal.fire({
                    icon: 'error',
                    title: 'User Not Found',
                    text: 'The entered name does not exist in the list.',
                    confirmButtonColor: '#d33'
                });
            }
        });
    });




</script>