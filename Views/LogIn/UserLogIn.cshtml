@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log IN</title>

    <link href="~/assets/boot/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/boot/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/boot/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/assets/boot/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS (Popper.js included) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



    <style>
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
        }

        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .screen {
            background: linear-gradient(90deg, #5D54A4, #7C78B8);
            position: relative;
            height: 600px;
            width: 360px;
            box-shadow: 0px 0px 24px #5C5696;
        }

        .screen__content {
            z-index: 1;
            position: relative;
            height: 100%;
        }

        .screen__background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            -webkit-clip-path: inset(0 0 0 0);
            clip-path: inset(0 0 0 0);
        }

        .screen__background__shape {
            transform: rotate(45deg);
            position: absolute;
        }

        .screen__background__shape1 {
            height: 520px;
            width: 520px;
            background: #FFF;
            top: -50px;
            right: 120px;
            border-radius: 0 72px 0 0;
        }

        .screen__background__shape2 {
            height: 220px;
            width: 220px;
            background: #6C63AC;
            top: -172px;
            right: 0;
            border-radius: 32px;
        }

        .screen__background__shape3 {
            height: 540px;
            width: 190px;
            background: linear-gradient(270deg, #5D54A4, #6A679E);
            top: -24px;
            right: 0;
            border-radius: 32px;
        }

        .screen__background__shape4 {
            height: 400px;
            width: 200px;
            background: #7E7BB9;
            top: 420px;
            right: 50px;
            border-radius: 60px;
        }

        .login {
            padding: 30px;
            padding-top: 156px;
        }

        .custom-alert {
            
            margin-top:-50px;
            color: darkblue;
            
            border-radius: 5px;
            margin: 15px 0;
            font-size: 16px;
            border-radius: 5px;
            margin: 15px 0;
            margin-left: 82px;
            margin-top: -45px;

        }

        .login__field {
            padding: 20px 0px;
            position: relative;
        }

        .login__icon {
            position: absolute;
            top: 30px;
            left: 10px;
            color: #7875B5;
        }

        .login__input {
            border: none;
            border-bottom: 2px solid #D1D1D4;
            background: none;
            padding: 10px;
            padding-left: 24px;
            font-weight: 700;
            width: 75%;
            transition: .2s;
        }

            .login__input:active,
            .login__input:focus,
            .login__input:hover {
                outline: none;
                border-bottom-color: #6A679E;
            }

        .login__submit {
            background: #fff;
            font-size: 14px;
            margin-top: 30px;
            padding: 16px 20px;
            border-radius: 26px;
            border: 1px solid #D4D3E8;
            text-transform: uppercase;
            font-weight: 700;
            display: flex;
            align-items: center;
            width: 100%;
            color: #4C489D;
            box-shadow: 0px 2px 2px #5C5696;
            cursor: pointer;
            transition: .2s;
        }

            .login__submit:active,
            .login__submit:focus,
            .login__submit:hover {
                border-color: #6A679E;
                outline: none;
            }

        .button__icon {
            font-size: 24px;
            margin-left: auto;
            color: #7875B5;
        }

        .social-login {
            position: absolute;
            height: 140px;
            width: 100%;
            text-align: center;
            bottom: 0px;
            right: 0px;
            color: #fff;
        }

        .social-icons {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-login__icon {
            padding: 20px 10px;
            color: #fff;
            text-decoration: none;
            text-shadow: 0px 0px 8px #7875B5;
        }

            .social-login__icon:hover {
                transform: scale(1.5);
            }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Raleway, sans-serif;
        }



        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: -60px;
            left: -130px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: -60px;
            right: -110px;
            width: 200px;
            height: 250px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        .bg-glass {
            background-color: #ffffff !important;
            backdrop-filter: saturate(200%) blur(25px);
        }

        .button-2 {
            font-weight: bold;
            background-color: #635283;
            border-radius: 8px;
            border-width: 0;
            color: #fff;
            cursor: pointer;
            display: inline-block;
            font-family: "Haas Grot Text R Web", "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 14px;
            font-weight: 500;
            line-height: 20px;
            list-style: none;
            margin: 0;
            padding: 10px 12px;
            text-align: center;
            transition: all 200ms;
            vertical-align: baseline;
            white-space: nowrap;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
        }

            .button-2:hover {
                background-color: #fff;
                color: #635283;
            }
    </style>
</head>
<body>

    <section class="background-radial-gradient overflow-hidden">
        <div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel" aria-hidden="true" style="margin-top:45px;">
            <div class="modal-dialog" style="max-width: 380px; margin: auto;">
                <div class="modal-content" style="border-radius: 12px;margin-left: 215px;width: 351; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);">
                    <div class="modal-header" style="background-color: #635283; color: white; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                        <h5 class="modal-title" id="resetPasswordModalLabel">Reset Password</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
                    </div>
                    <div class="modal-body" style="padding: 20px;">
                        <div id="resetStep1">
                            <div class="mb-3">
                                <label for="resetUsername" class="form-label" style="font-weight: 300;">Username</label>
                                <input type="text" readonly class="form-control" id="resetUsername" placeholder="Enter your username" style="border-radius: 8px;">
                            </div>
                            <div class="mb-3">
                                <label for="resetEmail" class="form-label" style="font-weight: 300;">Email</label>
                                <input type="email" readonly class="form-control" id="resetEmail" placeholder="Enter your email" style="border-radius: 8px;">
                            </div>
                            <div class="mb-3">
                                <label for="resetPhone" class="form-label" style="font-weight: 300;">Phone</label>
                                <input type="text" readonly class="form-control" id="resetPhone" placeholder="Enter your phone number" style="border-radius: 8px;">
                            </div>
                            <button type="button" class="button-2  form-control" onclick="sendResetOTP()" style="border-radius: 8px; border: none;">Send OTP</button>
                        </div>
                        <div id="resetStep2" style="display: none;">
                            <div class="mb-3">
                                <label for="resetUsername" class="form-label" style="font-weight: 300;">Username</label>
                                <input type="text" readonly class="form-control" id="resetUsername2" placeholder="Enter your username" style="border-radius: 8px;">
                            </div>
                            <div class="mb-3">
                                <label for="emailOTP" class="form-label" style="font-weight: 300;">Email OTP</label>
                                <input type="text" class="form-control" id="emailOTP" placeholder="Enter Email OTP" style="border-radius: 8px;">
                            </div>
                            <div class="mb-3">
                                <label for="phoneOTP" class="form-label" style="font-weight: 300;">Phone OTP</label>
                                <input type="text" class="form-control" id="phoneOTP" placeholder="Enter Phone OTP" style="border-radius: 8px;">
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label" style="font-weight: 300;">New Password</label>
                                <input type="password" class="form-control" id="newPassword" placeholder="Enter new password" style="border-radius: 8px;">
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label" style="font-weight: 300;">Confirm Password</label>
                                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password" style="border-radius: 8px;">
                            </div>
                            <button type="button" class="button-2  form-control" onclick="verifyAndResetPassword()" style="border-radius: 8px; border: none;">Reset Password</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="container   text-center text-lg-start" style="min-width:inherit;max-width:815px;">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                        <br />
                        <span style="color: hsl(218, 81%, 75%)">Quality Management System</span>
                    </h1>
                    <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">

                        The QMS Log Form project focuses on documenting and managing quality-related issues and actions, ensuring continuous improvement in processes and products. It promotes accountability and traceability in maintaining high standards of quality.
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>
                  
                    <br />
                    <br />
                    <br />
                  
                    <div class="container" style="min-height:inherit;">
                        <div style="border-radius: 20px;" class="screen">
                            <div class="screen__content">
                               
                                @using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @class = "login" }))
                                {
                                    @if (TempData["LoginMessage"] != null)
                                    {
                                        <div class="custom-alert" style="width:100px;">
                                            @TempData["LoginMessage"]
                                        </div>
                                    }
                                    <div class="login__field">
                                        <i class="login__icon fas fa-user"></i>
                                        @Html.TextBox("Username", null, new { @class = "form-control", placeholder = "Enter Username", style = "text-align:center" })

                                    </div>
                                    <div class="login__field">
                                        <i class="login__icon fas fa-lock"></i>

                                        @Html.Password("Password", null, new { @class = "form-control", placeholder = "Enter Password", style = "text-align:center" })
                                    </div>
                                    <br />
                                    <br />
                                    <button type="submit" class="button-2  form-control" ID="lnkSubmit">LOGIN</button>
                                    <button type="submit" class="button-2  form-control" ID="ResetPass" onclick="ResetPassword()"  style="display:none">Reset Password</button>

                                }
                                <div class="text-center"style="margin-top:-20px; margin-left:100px;">
                                    <a href="#" id="resetPasswordLink" class="text-light" data-bs-toggle="modal" data-bs-target="#resetPasswordModal"> Forgot Password?</a>

                                </div>
                                <div class="social-login">
                                    <img src="Images/nagalogo.png" style="width: 50%;" />
                                    <div class="social-icons">
                                        <a href="#" class="social-login__icon fab fa-instagram"></a>
                                        <a href="#" class="social-login__icon fab fa-facebook"></a>
                                        <a href="#" class="social-login__icon fab fa-twitter"></a>
                                    </div>
                                </div>
                            </div>
                            <div class="screen__background">
                                <span class="screen__background__shape screen__background__shape4"></span>
                                <span class="screen__background__shape screen__background__shape3"></span>
                                <span class="screen__background__shape screen__background__shape2"></span>
                                <span class="screen__background__shape screen__background__shape1"></span>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
     
    </section>
    <script src="~/js/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#resetPasswordLink').on('click', function (e) {
                e.preventDefault();

                var loginUsername = $('input[name="Username"]').val();

                if (!loginUsername || loginUsername.trim() === '') {
                    alert("Please enter your username first.");
                    return;
                } else {
             

                    $.ajax({
                        url: '/LogIn/CheckUsername',
                        type: 'POST',
                        data: { username: loginUsername },
                        success: function (response) {
                            console.log(JSON.stringify(response));
                            if (response.success) {
                                  var userData = response.data[0];
                             
                             $('#resetUsername2').val(loginUsername);
                                $('#resetUsername').val(loginUsername);
                                $('#resetEmail').val(userData.Email);  // Access Email
                                   $('#resetPhone').val(userData.PhoneNumber);
                                var modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
                                modal.show();
                            } else {
                                alert("Username not found or error occurred: " + (response.error || ""));
                                console.log("Server response:", response);
                            }
                        },
                        error: function (xhr, status, thrownError) {
                            console.error("AJAX Error Status:", status);
                            console.error("AJAX Error Thrown:", thrownError);
                            console.error("Full Response Text:", xhr.responseText);
                            alert("AJAX call failed. Check console for error details.");
                        }
                    });
                }
            });
        });
    </script>


    <script>
        window.addEventListener('load', function () {
            var Reset = '@TempData["Reset"]';

            if (Reset && Reset !== "null" && Reset !== "") {
                alert(Reset);
                if (typeof openResetPasswordModal2 === 'function') {
                    openResetPasswordModal2();
                } else {
                    console.error('openResetPasswordModal2 is not defined');
                }
            }
        });

        function openResetPasswordModal2() {
          
            // var modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
            // modal.show();

            var loginUsername = '@TempData["Username"]';

                if (!loginUsername || loginUsername.trim() === '') {
                    alert("Please enter your username first.");
                    return;
                } else {


                    $.ajax({
                        url: '/LogIn/CheckUsername',
                        type: 'POST',
                        data: { username: loginUsername },
                        success: function (response) {
                            console.log(JSON.stringify(response));
                            if (response.success) {
                                  var userData = response.data[0];

                             $('#resetUsername2').val(loginUsername);
                                $('#resetUsername').val(loginUsername);
                                $('#resetEmail').val(userData.Email);  // Access Email
                                   $('#resetPhone').val(userData.PhoneNumber);
                                var modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
                                modal.show();
                            } else {
                                alert("Username not found or error occurred: " + (response.error || ""));
                                console.log("Server response:", response);
                            }
                        },
                        error: function (xhr, status, thrownError) {
                            console.error("AJAX Error Status:", status);
                            console.error("AJAX Error Thrown:", thrownError);
                            console.error("Full Response Text:", xhr.responseText);
                            alert("AJAX call failed. Check console for error details.");
                        }
                    });
                }
        }
    </script>


    <script>
        function sendResetOTP() {
            let email = document.getElementById('resetEmail').value;
            let phone = document.getElementById('resetPhone').value;
            let username = document.getElementById('resetUsername').value;

            if (!email || !phone || !username) {
                alert("Please enter all required fields.");
                return;
            }

            $.ajax({
                url: '/Login/SendOTP',
                type: 'POST',
                data: { email: email, phone: phone, username: username },
                success: function (response) {
                    if (response.success) {
                        alert("OTP sent to your email and phone.");
                        document.getElementById("resetStep1").style.display = "none";
                        document.getElementById("resetStep2").style.display = "block";
                    } else {
                        alert("Failed to send OTP. Please check your details.");
                    }
                },
                error: function () {
                    alert("Error in sending OTP.");
                }
            });
        }

        function verifyAndResetPassword() {
            let username = document.getElementById('resetUsername2').value;
            let emailOTP = document.getElementById('emailOTP').value;
            let phoneOTP = document.getElementById('phoneOTP').value;
            let newPassword = document.getElementById('newPassword').value;
            let confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                alert("Passwords do not match.");
                return;
            }
            if (!username || !emailOTP || !phoneOTP || !newPassword || !confirmPassword) {
                alert("All fields are required. Please fill out all fields.");
                return;
            }

            $.ajax({
                url: '/Login/ResetPassword',
                type: 'POST',
                data: { emailOTP: emailOTP, phoneOTP: phoneOTP, newPassword: newPassword, username: username },
                success: function (response) {
                    if (response.success) {
                        alert("Password reset successfully.");
                        location.reload();
                    } else {
                        alert("OTP verification failed. Please try again.");
                    }
                },
                error: function () {
                    alert("Error in resetting password.");
                }
            });
        }


        function openResetPasswordModal() {
            
            document.getElementById('lnkSubmit').style.display = 'none';
            document.getElementById('ResetPass').style.display = 'block';

        }
       
    </script>
</body>
</html>
