    <script>
        function sendResetOTP() {
            let email = document.getElementById('resetEmail').value;
            let phone = document.getElementById('resetPhone').value;
            let username = document.getElementById('resetUsername').value;

            if (!email || !phone || !username) {
                alert("Please enter all required fields.");
                return;
            }

            $.ajax({
                url: '/Login/SendOTP',
                type: 'POST',
                data: { email: email, phone: phone, username: username },
                success: function (response) {
                    if (response.success) {
                        alert("OTP sent to your email and phone.");
                        document.getElementById("resetStep1").style.display = "none";
                        document.getElementById("resetStep2").style.display = "block";
                    } else {
                        alert("Failed to send OTP. Please check your details.");
                    }
                },
                error: function () {
                    alert("Error in sending OTP.");
                }
            });
        }

        function verifyAndResetPassword() {
            let username = document.getElementById('resetUsername2').value;
            let emailOTP = document.getElementById('emailOTP').value;
            let phoneOTP = document.getElementById('phoneOTP').value;
            let newPassword = document.getElementById('newPassword').value;
            let confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                alert("Passwords do not match.");
                return;
            }
            if (!username || !emailOTP || !phoneOTP || !newPassword || !confirmPassword) {
                alert("All fields are required. Please fill out all fields.");
                return;
            }
                         const alphaNumericRegex = /^(?=.*[A-Za-z])(?=.*\d).+$/;
        if (!alphaNumericRegex.test(newPassword)) {
            alert("Password must be alphanumeric (contain at least one letter and one number).");
            return;
        }

            $.ajax({
                url: '/Login/ResetPassword',
                type: 'POST',
                data: { emailOTP: emailOTP, phoneOTP: phoneOTP, newPassword: newPassword, username: username },
                success: function (response) {
                    if (response.success) {
                        alert("Password reset successfully.");
                        location.reload();
                    } else {
                        alert("OTP verification failed. Please try again.");
                    }
                },
                error: function () {
                    alert("Error in resetting password.");
                }
            });
        }
