                      function getSlot(date) {
      const day = date.getDate();
      if (day >= 1 && day <= 7) return 1;
      if (day >= 8 && day <= 14) return 2;
      if (day >= 15 && day <= 21) return 3;
      return 4;
    }

    function getNextSlot(currentSlot) {
      return currentSlot % 4 + 1; // 1 → 2 → 3 → 4 → 1 ...
    }

    function getSlotDateRange(year, month, slot) {
      const startDay = slot === 1 ? 1 : slot === 2 ? 8 : slot === 3 ? 15 : 22;
      const endDay = slot === 1 ? 7 : slot === 2 ? 14 : slot === 3 ? 21 : new Date(year, month + 1, 0).getDate();
      return { startDay, endDay };
    }

    function isDateInSlot(date, slot) {
      const { startDay, endDay } = getSlotDateRange(date.getFullYear(), date.getMonth(), slot);
      return date.getDate() >= startDay && date.getDate() <= endDay;
    }

    function addMonths(date, months) {
      const newDate = new Date(date);
      newDate.setMonth(newDate.getMonth() + months);
      return newDate;
    }




