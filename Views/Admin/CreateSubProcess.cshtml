<div class="modal fade" id="pauseModal" tabindex="-1" aria-labelledby="pauseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pauseModalLabel">Enter Value</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label for="agentValue">Enter pause Count:</label>
                <input type="text" id="pauseValue" class="form-control">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="ClosePauseValue()">Close</button>

                <button type="button" class="btn btn-primary" onclick="submitPauseValue()">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit SubProcess</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <div class="form-group">
                        <label for="editSubProcess">SubProcess Name</label>
                        <input type="text" class="form-control" id="editSubProcess" />
                        <input type="hidden" id="editSubProcessId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveChanges()">Save changes</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/jquery.min.js"></script>
<script>
         $(document).ready(function () {
        // Open modal when clicking "ADD" button
        $("#AddAgent").click(function () {
            $("#agentModal").modal("show");
        });

        // Close modal when clicking "Close" button
        $(".btn-close, .btn-secondary").click(function () {
            $("#agentModal").modal("hide");
        });

        // Save agent data when clicking "Save" button
        $("#saveAgent").click(function () {
            var empName = $("#empName").val();
            var empCode = $("#empCode").val();
            var tlName = $("#tlName").val();
            var tlCode = $("#tlCode").val();
            var qaName = $("#qaName").val();
            var batchID = $("#batchID").val();

            // Validation: Ensure all fields are filled
            if (!empName || !empCode || !tlName || !tlCode || !qaName || !batchID) {
                alert("All fields are required!");
                return;
            }

            var newID = Math.floor(Math.random() * 10000);  // Generate a unique ID

            var newRow = `<tr>
                <td style="display:none">${newID}</td>
                <td>${empName}</td>
                <td>${empCode}</td>
                <td>${tlName}</td>
                <td>${tlCode}</td>
                <td>${qaName}</td>
                <td>${batchID}</td>
                <td><button class="btn btn-danger btn-sm removeAgent">Remove</button></td>
            </tr>`;

            // Append new row to table
            $("#agentTable tbody").append(newRow);

            // Hide modal & reset form
            $("#agentModal").modal("hide");
            $("#agentForm")[0].reset();
        });

        // Remove agent when clicking "Remove" button
        $("#agentTable").on("click", ".removeAgent", function () {
            $(this).closest("tr").remove();
        });
    });


</script>
<script>
    function onLocationChange() {

        var Location = $('#Location_ID').val();

        $.ajax({
            type: "POST",
            data: JSON.stringify({ id: Location }),

            url: "/Admin/GetProcessList",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {

                var dropdown = $('#ProgramID');
                dropdown.empty();
                dropdown.append('<option value="">Select Process</option>');
                response.proces.forEach(function (item) {
                    dropdown.append('<option value="' + item.value + '">' + item.text + '</option>');
                });
            },
            error: function (xhr, status, error) {
                console.error("Error occurred: " + error);
            }
        });
    }

    function UpdateAGentList()
    {


                          var agentData = [];

             let programID_2 = $("#ProgramID").val();
            let subProgramID_2 = $("#HiddenSubProcessID").val();

            $("#agentTable tbody tr").each(function () {
                var row = $(this).find("td");
                var agent = {
                    ID: $(row[0]).text().trim(),
                    EmpName: $(row[1]).text().trim(),
                    EmpCode: $(row[2]).text().trim(),
                    TL_Name: $(row[3]).text().trim(),
                    TL_Code: $(row[4]).text().trim(),
                    QA_Name: $(row[5]).text().trim(),
                    Batch_ID: $(row[6]).text().trim(),
                                    programId:programID_2,
                    subProgramId: subProgramID_2
                    };
                agentData.push(agent);
            });

            console.log(agentData); // Debugging output

            $.ajax({
                type: "POST",
                url: "/ManageForm/SaveAgents",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify({ agents: agentData }),  // Wrap inside an object
                success: function (response) {
                    alert("Agent List  Edited  successfully!");
                    $("#AgentListEdit").hide();

                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });



    }

    function onProgramChange() {
        var programId = document.getElementById("ProgramID").value;
        $.ajax({
            type: "POST",
            data: JSON.stringify({ id: programId }),

            url: "/Admin/GetSUBProcessList",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                console.log(response);
                var tableBody = $('#UserTable tbody');
                tableBody.empty();
                var loc = document.getElementById("Location_ID");
                var locationName = loc.options[loc.selectedIndex].text;

                var proc = document.getElementById("ProgramID");
                var processName = proc.options[proc.selectedIndex].text;


                var userCardBody = document.getElementById("UserCardBody");
                var userTable = document.getElementById("UserTable");

                if (response && response.proces && response.proces.length > 0) {
                    userCardBody.style.visibility = "visible";
                    userTable.style.visibility = "visible";
                    response.proces.forEach(function (item) {
                        var textValues = item.text.split(',');


                        var firstText = textValues[0];
                        var secondText = textValues[1];
                        var row = `
                                <tr>
                                          <td>${item.value}</td>
                                    <td>${locationName}</td>
                                    <td>${processName}</td>
                                        <td>${firstText} </td>
                                             <td>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="chk_${item.value}" ${secondText == "1" ? "checked" : ""} onclick="updateStatus('${item.value}', this.checked)" />
                            <label class="custom-control-label" for="chk_${item.value}"></label>
                        </div>
                    </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" onclick="editSubProcess('${item.value}', '${firstText}')">Edit</button>
                                    </td>
                                     <td>
                                                <button class="btn btn-sm btn-primary" onclick="editAgent('${item.value}', '${firstText}')">Agent</button>
                                        </td>
                                          <td>
                                                <button class="btn btn-sm btn-primary" onclick="PauseCount('${item.value}', '${firstText}')">Pause Count</button>
                                        </td>
                                </tr>
                            `;
                        tableBody.append(row);
                    });
                } else {
                    userCardBody.style.visibility = "visible";
                    userTable.style.visibility = "visible";
                    var row = `<tr><td colspan="3">No data available</td></tr>`;
                    tableBody.append(row);
                }
            },
            error: function (xhr, status, error) {
                console.error("Error occurred: " + error);
            }
        });

    }
    function updateStatus(name, isChecked) {

        var status = isChecked ? 1 : 0;

        SaveSUBProcess(name, status);

    }
    function PauseCount(id, currentName) {
           $("#HiddenSubProcessID").val(id);
         var ProgramID = $("#ProgramID").val();
        $("#pauseModal").modal("show"); // Show modal using jQuery
      }
         function ClosePauseValue() {
              $("#pauseModal").modal("hide");

         }


          function submitPauseValue() {

                var pauseValue = document.getElementById("pauseValue").value;

                        if (!pauseValue) {
                            alert("Please enter a value.");
                            return;
                        }
                     var ProgramID = $("#ProgramID").val();
                      var SubProgramID = $("#HiddenSubProcessID").val();

                    $.ajax({
                    url: "/Module/UpdatePauseCount",
                    type: "POST",
                    data: { id: ProgramID  ,ProgramID:SubProgramID , pauseValue:pauseValue},
                    success: function (response) {
                          $("#pauseModal").modal("hide");
                    },
                    error: function (xhr, status, error) {
                        console.error("Error updating agent:", error);
                    }
                    });

    }
     function editAgent(id, currentName) {
         $("#AgentListEdit").show();
         $("#HiddenSubProcessID").val(id);
         var ProgramID = $("#ProgramID").val();
         console.log("SubPreogra..." +ProgramID );
        $.ajax({
        url: "/Module/Edit",
        type: "POST",
        data: { id: id  ,ProgramID:ProgramID},
        success: function (response) {
           if (response.agentgried && response.agentgried.length > 0) {
                    var tbody = $("#agentTable tbody");
                    tbody.empty(); // Clear existing rows

                        $.each(response.agentgried, function (index, agent) {
                        var row = `<tr>
                            <td style="display:none" >${agent.id}</td>
                            <td>${agent.empName}</td>
                            <td>${agent.empCode}</td>
                            <td>${agent.tL_Name}</td>
                            <td>${agent.tL_Code}</td>
                            <td>${agent.qA_Name}</td>
