@using System.Data
@model System.Data.DataTable
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Http
@if (TempData["ErrorMessages"] != null)
{
    var errorMessages = ((string[])TempData["ErrorMessages"]).ToList();
    @foreach (var message in errorMessages)

    {
        <div class="alert alert-primary" id="NotificationDiv" runat="server" role="alert">
            <span class="fe fe-alert-circle fe-16 mr-2" id="Notif   ication" runat="server">
                @message
            </span>
        </div>
    }

}


<div class="col-md-12 my-4">
    <div class="card shadow">
        <div class="card-body">
            @using (Html.BeginForm("InsertSubProcess", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))

            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="LocationDropDown">Location Name</label>
                            @Html.DropDownList("Location_ID", (List<SelectListItem>)ViewBag.Locations, "Select Location", new { @class = "custom-select", id = "Location_ID", onchange = "onLocationChange()" })

                        </div>


                        <div class="form-group mb-3">
                            <label for="SubProcess">SubProcess</label>
                            <input type="text" id="SubProcess" name="SubProcess" autocomplete="off" class="form-control" />
                        </div>

                      

                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group mb-3">
                            <label for="ProgramID">Program Name</label>
                            <select name="ProgramID" id="ProgramID" class="custom-select" onchange="onProgramChange()">
                                <option value="">Select Process</option>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="Number_Of_Pause">Number Of Pause</label>
                            <input type="number" id="Number_Of_Pause" name="Number_Of_Pause" autocomplete="off" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group mb-3">
                            <label for="ProgramID">Upload Agent List</label>
                            <input type="file" id="fileUpload" name="file" class="form-control" required />

                        </div>
                        <div class="form-group mb-3">
                              </div>
                    </div>
                </div>

                <div class="col-md-2 my-4">
                    <div class="card-body d-flex justify-content-center align-items-center">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

<div id="UserCardBody" style="visibility:hidden" class="col-md-12 my-4">
    <div class="card shadow">
        <div class="card-body">
            <table id="UserTable" style="visibility:hidden" class="table table-bordered table-hover mb-0">
                <thead>
                    <tr>

                        <th>ID</th>
                        <th>LocationName</th>

                        <th>ProcessName</th>
                        <th>SubProcess</th>
                        <th>Action</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit SubProcess</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <div class="form-group">
                        <label for="editSubProcess">SubProcess Name</label>
                        <input type="text" class="form-control" id="editSubProcess" />
                        <input type="hidden" id="editSubProcessId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveChanges()">Save changes</button>
            </div>
        </div>
    </div>
</div>


<script>
    function onLocationChange() {

        var Location = $('#Location_ID').val();

        $.ajax({
            type: "POST",
            data: JSON.stringify({ id: Location }),

            url: "/Admin/GetProcessList",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {

                var dropdown = $('#ProgramID');
                dropdown.empty();
                dropdown.append('<option value="">Select Process</option>');
                response.proces.forEach(function (item) {
                    dropdown.append('<option value="' + item.value + '">' + item.text + '</option>');
                });
            },
            error: function (xhr, status, error) {
                console.error("Error occurred: " + error);
            }
        });
    }
    function onProgramChange() {
        var programId = document.getElementById("ProgramID").value;
        $.ajax({
            type: "POST",
            data: JSON.stringify({ id: programId }),

            url: "/Admin/GetSUBProcessList",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                console.log(response);
                var tableBody = $('#UserTable tbody');
                tableBody.empty();
                var loc = document.getElementById("Location_ID");
                var locationName = loc.options[loc.selectedIndex].text;

                var proc = document.getElementById("ProgramID");
                var processName = proc.options[proc.selectedIndex].text;


                var userCardBody = document.getElementById("UserCardBody");
                var userTable = document.getElementById("UserTable");

                if (response && response.proces && response.proces.length > 0) {
                    userCardBody.style.visibility = "visible";
                    userTable.style.visibility = "visible";
                    response.proces.forEach(function (item) {
                        var textValues = item.text.split(',');


                        var firstText = textValues[0];
                        var secondText = textValues[1];
                        var row = `
                                <tr>
                                          <td>${item.value}</td>
                                    <td>${locationName}</td>
                                    <td>${processName}</td>
                                        <td>${firstText} </td>
                                             <td>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="chk_${item.value}" ${secondText == "1" ? "checked" : ""} onclick="updateStatus('${item.value}', this.checked)" />
                            <label class="custom-control-label" for="chk_${item.value}"></label>
                        </div>
                    </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" onclick="editSubProcess('${item.value}', '${firstText}')">Edit</button>
                                    </td>
                                </tr>
                            `;
                        tableBody.append(row);
                    });
                } else {
                    userCardBody.style.visibility = "visible";
                    userTable.style.visibility = "visible";
                    var row = `<tr><td colspan="3">No data available</td></tr>`;
                    tableBody.append(row);
                }
            },
            error: function (xhr, status, error) {
                console.error("Error occurred: " + error);
            }
        });

    }
    function updateStatus(name, isChecked) {

        var status = isChecked ? 1 : 0;

        SaveSUBProcess(name, status);

    }
    function SaveSUBProcess(id, status) {
        $.ajax({
            url: '/Admin/ActiveDeActiveSubProcess',  // Replace with your controller and method name
            type: 'POST',
            data: {
                id: id,
                isActive: status
            },
            success: function (response) {
                if (response.success) {
                    alert('Process status updated successfully.');
                } else {
                    alert('Error: ' + (response.message || 'An error occurred while updating the status.'));
                }
            },
            error: function () {
                alert('Error: Failed to communicate with the server.');
            }
        });

    }
    function editSubProcess(id, currentName) {
        // Populate the modal with current data
        $('#editSubProcess').val(currentName);
        $('#editSubProcessId').val(id);
        $('#editModal').modal('show');
    }

    function saveChanges() {
        var updatedName = $('#editSubProcess').val();
        var subProcessId = $('#editSubProcessId').val();


        $.ajax({
            type: "POST",
            data: { id: subProcessId, newName: updatedName },
            url: "/Admin/UpdateSubProcessName",

            success: function () {
                alert('SubProcess updated successfully!');
                $('#editModal').modal('hide');
                onProgramChange(); // Refresh the table
            },
            error: function (xhr, status, error) {
                console.error("Error occurred: " + error);
            }
        });


    }
</script>

